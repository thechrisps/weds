<% include header %>

    <!-- Register -->
    <section id="about" class="about">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>Hi, <%= friendlyName %></h2>
                    <p class="lead">Thanks for replying. We aren't quite ready to send invites out yet. However, we would appreciate you entering your email address below so that we can keep you updated.</p>
                    <p>When you enter your email, we'll use a cookie to remember you on this computer, so you can come back easily later.</p>
                    <p style="text-align:center;"><input type="text" class="fullWidthFormElement" placeholder="Enter Your E-Mail Here"></p>
                    <p><a href="#about" class="btn btn-dark btn-lg fullWidthFormElement">Register E-Mail</a></p>
                </div>
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container -->
    </section>

    <!-- Map -->
    <section id="contact" class="map">
        <iframe width="100%" height="100%" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://www.google.com/maps/d/embed?mid=1TtGBMRfPji7y11ayU0uLwoPKgEc"></iframe>
        <br />
        <small>
            <a href="https://www.google.com/maps/d/embed?mid=1TtGBMRfPji7y11ayU0uLwoPKgEc"></a>
        </small>
    </section>

