<% include header %>

    <!-- Register -->
    <section id="about" class="about">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>Hi, <%= friendlyName %></h2>
                    <p class="lead">Thanks for replying. We aren't quite ready to send invites out yet. However, we would appreciate you entering your email address below so that we can keep you updated.</p>
                    <p>The wedding is on the 7th April 2018 at Bisham Church and Bisham Abbey (maps below). There is not much parking at the church, so we recommend that you park at Bisham Abbey and walk next door (see the map below).</p>
                    <p style="text-align:center;">
                        <input type="text" id="txtEmail" class="fullWidthFormElement" placeholder="Enter Your E-Mail Here">
                        <input type="hidden" name="hdnInvite" id="hdnInvite" value="<%= inviteCode %>">
                    </p>
                    <p><a href="#about" class="btn btn-dark btn-lg fullWidthFormElement" id="btnRegister">Register E-Mail</a></p>
                </div>
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container -->
    </section>

    <!-- Map -->
    <section id="contact" class="map">
        <iframe width="100%" height="100%" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://www.google.com/maps/d/embed?mid=1TtGBMRfPji7y11ayU0uLwoPKgEc"></iframe>
        <br />
        <small>
            <a href="https://www.google.com/maps/d/embed?mid=1TtGBMRfPji7y11ayU0uLwoPKgEc"></a>
        </small>
    </section>

<% include footer %>
