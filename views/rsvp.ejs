<!-- Register -->
<section id="about" class="about">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>RSVP</h2>
                <p class="lead">We would be delighted if you are able to attend our wedding at Bisham Church and Bisham Abbey on the 7th April 2018. </p>
                <p>Please select below if you can attend or if you have any special requirements and press save.</p>
                <p>We would very much appreciate if you are able to let us know by 1st January 2018. If you have any questions, do give us a call or drop us a message on Facebook.</p>
            </div>
        </div>
        <!-- /.row -->
        <input type="hidden" name="hdnInvite" id="hdnInvite" value="<%= inviteCode %>">
        <div class="row">
            <div class="col-lg-12 text-center">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <td></td>
                            <td>I can attend the ceremony</td>
                            <td>I can attend the reception</td>
                            <td>I can attend the evening</td>
                            <td>Special requirements</td>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (var i = 0; i < people.length; i++) { %>
                        <form id='person<%= people[i].id%>'>
                            <tr>
                                <td><%= people[i].name %></td>
                                <td>
                                    <select class="form-control" id='ceremony<%= people[i].id%>' onchange="setCanSave()">
                                        <option value="1" <%if (people[i].ceremony==="1") {%>selected<%}%>>Yes</option>
                                        <option value="0" <%if (people[i].ceremony==="0") {%>selected<%}%>>No</option>
                                        <option value="-1" <%if (people[i].ceremony==="-1") {%>selected<%}%>>Don't Know</option>
                                    </select>
                                </td>
                                <td>
                                    <select class="form-control" id='reception<%= people[i].id%>' onchange="setCanSave()">
                                        <option value="1" <%if (people[i].reception==="1") {%>selected<%}%>>Yes</option>
                                        <option value="0" <%if (people[i].reception==="0") {%>selected<%}%>>No</option>
                                        <option value="-1" <%if (people[i].reception==="-1") {%>selected<%}%>>Don't Know</option>
                                    </select>
                                </td>
                                <td>
                                    <select class="form-control" id='evening<%= people[i].id%>' onchange="setCanSave()">
                                        <option value="1" <%if (people[i].evening==="1") {%>selected<%}%>>Yes</option>
                                        <option value="0" <%if (people[i].evening==="0") {%>selected<%}%>>No</option>
                                        <option value="-1" <%if (people[i].evening==="-1") {%>selected<%}%>>Don't Know</option>
                                    </select>
                                </td>
                                <td>
                                    <input type="text" class="form-control" id='txtRequirements<%= people[i].id%>' value='<%= people[i].requirements%>' placeholder="Enter special requirements/requests" id='requirements<%= people[i].personId%>' onchange="setCanSave()">
                                </td>
                            </tr>
                        </form>
                        <% } %>
                    </tbody>
                </table>
                <button type="button" class="btn btn-primary" id="btnSaveRsvp">Save Responses</button>&nbsp;&nbsp;<div id="lblSave"></div>
            </div>
        </div>
    </div>
    <!-- /.container -->
</section>

